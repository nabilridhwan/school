<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:text="Custom Style Example"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCustomButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.775" />

    <Button
        android:id="@+id/btnCustomButton"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_select_drawable"
        android:onClick="onClick"
        android:text="My Custom Style Page"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCustomTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCustomTheme"
        style="@style/CustomButtom"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginBottom="252dp"
        android:onClick="onClick"
        android:text="My Custom Theme Page"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>